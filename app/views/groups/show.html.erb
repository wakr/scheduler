<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<p>
  <strong>Users:</strong>
        <table>
          <tbody>
          <% @group.members.each do |member| %>
              <tr>
                <td><%= link_to member.name, member %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
</p>
<% if Membership.membership_exists?(current_user.id, @group.id) %>
  <%= link_to('Leave the group', membership_path(Membership.find_mem(current_user, @group.id)), method: :delete) %>
<% else %>
  <%= form_for(@membership, method: :post) do |f| %>
    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :group_id, :value => @group.id %>
    </div>
    <div class="actions">
      <%= f.submit "join the club" %>
    </div>
  <% end %>
<% end %>
<br/>
<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
