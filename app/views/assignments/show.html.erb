<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @assignment.name %>
</p>


<h3>People doing this assignment</h3>

<table>
  <tbody>
  <% @assignment.doers.each do |worker| %>
      <tr>
        <td><%= link_to worker.name, worker %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Add more workers", new_user_assignment_path(:assignment_id => @assignment.id)%>


<h3>This assignment was assigned by</h3>
<p>
  <%= link_to @assignment.get_creator, @assignment.get_creator%>
</p>

<p>
  <strong>Is done:</strong>
  <%= @assignment.is_done %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @assignment.deadline %>
</p>

<p><strong>Tasks</strong></p>

<table>

  <thead>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th colspan="10"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td><%= task.is_done %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New task', new_task_path(:assignment_id => @assignment.id)%>
<br><br>
<%= link_to 'Edit', edit_assignment_path(@assignment) %> |
<%= link_to 'Back', assignments_path %>
