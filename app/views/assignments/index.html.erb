<h1>Listing Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Workers</th>
      <th>Deadline</th>
      <th>Assigned by</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= link_to assignment.name, assignment %></td>

        <td>
          <table>
            <tbody>
          <% assignment.doers.each do |doer| %>
          <tr>
            <td><%=link_to doer, doer%></td>
          </tr>
            <% end %>
            </tbody>
            </table>
        </td>

        <td><%= assignment.deadline %></td>
        <td><%= link_to assignment.get_creator, assignment.get_creator%> </td> <!-- This is pretty slow because SQL-->
        <td><%= assignment.isReady%></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add task', new_task_path(:assignment_id => assignment.id)%></td>
        <td><%= link_to 'Add worker', ""%></td>
      </tr>
    <% end %>
  </tbody>
</table>

